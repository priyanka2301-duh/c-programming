#include<stdio.h>
main()
{
printf("Pick a food item : \n1. Pizza Rs.239\n2. Burger Rs.129\n3. Pasta Rs.179\n4. French Fries Rs.99\n5. Sandwich Rs.149");
int choice=0;
scanf("%d",&choice);
switch(choice)
{
    case 1:
       printf("You picked Chicken White Sause Pasta.");
       printf("\nPrice Rs.239");
       break;
    case 2:
       printf("You picked Burger.");
       printf("\nPrice Rs.290");
       break;
    case 3:
       printf("You picked Fried Rice.");
       printf("\nPrice Rs.210");
       break;
    case 4:
       printf("You picked Chocolate Icecream .");
       printf("\nPrice Rs.99");
       break;
    case 5:
       printf("You picked Pizza.");
       printf("\nPrice Rs.499");
       break;
    default : printf("Invalid choice");
}
}
